pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Compilar aplicaci√≥n') {
            steps {
                sh "${CNS}"
            }
        }

        stage('Ejecutar pruebas') {
            steps {
                sh './gradlew test'
            }
        }

        stage(''){
            steps{
                sh ```
                trcli -y \
                 -h "${HOST}" \
                  --project "${PROJECT}" \
                  --username "${USERNAME}" \
                  --password "${PASSWORD}" \
                  parse_junit \
                  --title "JUnit5 Automated Test Run" \
                  -f "${DIRECTORY}"
                ```
            }
        }
    }
} 
